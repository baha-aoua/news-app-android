<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="100px"
        android:layout_marginStart="200px"
        android:layout_marginTop="200px"
        android:layout_marginEnd="200px"
        android:layout_marginBottom="20px"
        android:fontFamily="serif"
        android:text="Hello ðŸ‘‹"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textSize="24sp"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="cursive"
        android:foregroundGravity="center"
        android:gravity="center_horizontal"
        android:text="Welcome to"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="100px"
        android:fontFamily="serif"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="TMN"
        android:textAlignment="center"
        android:textColor="#100F0F"
        android:textColorHighlight="#03A9F4"
        android:textColorLink="#03A9F4"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="40px"
        android:text="Log into your acount"
        android:textAlignment="center"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="20dp"
        android:layout_marginBottom="10dp"
        android:autofillHints=""
        android:background="#8F716B6B"
        android:hint="Username"
        android:paddingStart="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />





    <EditText
        android:id="@+id/editTextpassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="20dp"
        android:background="#8F716B6B"
        android:hint="Password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:paddingStart="10dp">
        android:drawableRight="@drawable/ic_visibility_off"
        android:drawablePadding="8dp" <!-- Adjust padding as needed -->
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" /></EditText>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_margin="50dp">







        <Button
            android:id="@+id/buttonSave"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:layout_margin="200px"
            android:backgroundTint="#DA3030"
            android:text="SIGN UP" />
    </LinearLayout>


</LinearLayout>